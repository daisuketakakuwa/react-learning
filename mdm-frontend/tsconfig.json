{
    "compilerOptions": {
        "jsx": "preserve",
        "target": "ES2020",
        "lib": ["dom", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "sourceMap": true,
        "outDir": "./build",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": false,
        "noEmit": true,
        "skipLibCheck": true, // node_modulesの型チェックをスキップし安定化
        "isolatedModules": true,
        "strict": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"]
        },
        "incremental": true,
        "resolveJsonModule": true
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
